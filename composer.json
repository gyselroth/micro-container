{
    "name": "gyselroth/micro-container",
    "description": "Simple php dependency injection container with autowiring support",
    "keywords": ["micro", "di", "PSR-11"],
    "homepage": "http://www.github.com/gyselroth/micro",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffael Sahli",
            "email": "sahli@gyselroth.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Micro\\Container\\": "src",
            "Micro\\Container\\Testsuite\\": "tests"
        }
    },
    "require": {
        "php": ">=7.1",
        "psr/log": "1.*",
        "psr/container": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "friendsofphp/php-cs-fixer": "*",
        "phpstan/phpstan": "^0.8.5"
    }
}
